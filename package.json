{
  "name": "@silverbulletmd/publish",
  "author": {
    "name": "Zef Hemel",
    "email": "zef@zef.me"
  },
  "version": "0.0.4",
  "license": "MIT",
  "bin": {
    "silverbullet-publish": "./dist/publish.js"
  },
  "scripts": {
    "watch": "rm -rf .parcel-cache && parcel watch",
    "build": "plugos-bundle --dist dist --exclude @lezer/lr yaml handlebars -- publish.plug.yaml && parcel build",
    "clean": "rm -rf dist",
    "start": "plugos-bundle -w --dist dist --exclude @lezer/lr yaml handlebars -- publish.plug.yaml",
    "release": "npm run clean && npm run build && npm publish --access public"
  },
  "targets": {
    "publish": {
      "source": [
        "bin/publish.ts"
      ],
      "outputFormat": "commonjs",
      "isLibrary": true,
      "context": "node",
      "includeNodeModules": [
        "@plugos/plugos",
        "@silverbulletmd/common",
        "@silverbulletmd/server"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@codemirror/language": "^6.0.0",
    "@lezer/common": "1.0.0",
    "@lezer/highlight": "1.0.0",
    "@lezer/markdown": "1.0.1",
    "@plugos/plugos": "^0.0.32",
    "@plugos/plugos-syscall": "^0.0.32",
    "@silverbulletmd/common": "^0.0.32",
    "@silverbulletmd/plugos-silverbullet-syscall": "^0.0.32",
    "@silverbulletmd/plugs": "^0.0.32",
    "@silverbulletmd/server": "^0.0.32",
    "@silverbulletmd/web": "^0.0.32",
    "better-sqlite3": "^7.5.0",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "knex": "^1.0.4",
    "markdown-it": "^12.3.2",
    "markdown-it-task-lists": "^2.1.1",
    "punycode": "^2.1.1",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@parcel/transformer-inline-string": "^2.5.0",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.7.14",
    "parcel": "2.5.0"
  }
}
